<div id="feature_toggles_content">
    <h3><%= l.string("FEATURE_TOGGLES_TITLE") %></h3>

    <div id="global-message" style="display: none;">Failed to fetch toggles: <span class="message-text"></span></div>

    <script id="feature-toggle-item-template" type="text/x-handlebars-template">
        <ul>
            {{#each toggles}}
            <li id="{{this.key}}">
                <span class="key">{{this.key}}</span>
                <span class="description">{{this.description}}</span>
                <span class="value">{{this.value}}</span>
                <span class="has_changed">{{this.has_changed}}</span>
                <span class="message"></span>
            </li>
            {{/each}}
        </ul>
    </script>

    <div id="feature_toggles">
    </div>
</div>

<script type='text/javascript'>
    Util.on_load(function() {
        FeatureToggles.initializeAt(jQuery("#feature_toggles_content"), jQuery("#feature_toggles"), jQuery("#feature-toggle-item-template"), "<%= api_admin_feature_toggles_path %>");
    });
</script>
